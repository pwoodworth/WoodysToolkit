<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="WoodyToolkit.lua"/>
    <Script file="WtkAddon.lua"/>
    <Script file="WoodysToolkitConfig.lua"/>
<!--
    <Font name="WoodysToolkitInputBoxFontGrey" inherits="GameFontNormal" virtual="true">
        <Color r="0.5" g="0.5" b="0.5"/>
    </Font>
    <Font name="WoodysToolkitInputBoxFontDark" inherits="GameFontNormal" virtual="true">
        <Color r="0.25" g="0.25" b="0.25"/>
    </Font>
-->
    <EditBox name="WoodysToolkitInputBoxTemplate" inherits="InputBoxTemplate" letters="80" virtual="true">
        <Size x="250" y="20" />
        <!--<NormalFont style="QuestFontNormalSmall"/>-->
        <!--<DisabledFont style="GameFontDisable"/>-->
    </EditBox>
    <EditBox name="WoodysToolkitInputBoxFancyTemplate" inherits="WoodysToolkitInputBoxTemplate" virtual="true">
        <Size x="250" y="20" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\ChatFrame\UI-ChatInputBorder-Left">
                    <Size x="75" y="32" />
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="-10" y="0" />
                        </Anchor>
                    </Anchors>
                    <TexCoords left="0" right="0.2" top="0" bottom="1.0"/>
                </Texture>
                <Texture file="Interface\ChatFrame\UI-ChatInputBorder-Right">
                    <Size x="75" y="32" />
                    <Anchors>
                        <Anchor point="RIGHT">
                            <Offset x="10" y="0" />
                        </Anchor>
                    </Anchors>
                    <TexCoords left="0.7" right="1.0" top="0" bottom="1.0"/>
                </Texture>
            </Layer>
        </Layers>
        <!--<NormalFont style="GameFontNormal"/>-->
    </EditBox>
    <Frame name="WoodysToolkitFrame" hidden="false" parent="UIParent">
        <Scripts>
            <OnLoad function="WoodysToolkit_OnLoad"/>
            <OnEvent function="WoodysToolkit_OnEvent"/>
        </Scripts>
    </Frame>
    <Frame name="WoodysToolkitConfigFrame" hidden="true">
        <Scripts>
            <OnLoad>
                WoodysToolkitConfig_OnLoad(self);
            </OnLoad>
        </Scripts>
        <Frames>
        </Frames>
    </Frame>
</Ui>
